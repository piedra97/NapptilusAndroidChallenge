<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="oompaloompa"
            type="com.example.napptilusandroidchallenge.model.OompaLoompa" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/oompaloompa_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:oompaLoompaImage="@{oompaloompa}"/>

        <TextView
            android:id="@+id/oompaloompa_name"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/oompaloompa_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Wednesday"
            app:oompaLoompaName="@{oompaloompa}"/>

        <TextView
            android:id="@+id/oompaloompa_last_name"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/oompaloompa_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/oompaloompa_name"
            app:layout_constraintTop_toBottomOf="@+id/oompaloompa_name"
            tools:text="Excellent!!!"
            app:oompaLoompaLastName="@{oompaloompa}"/>

        <TextView
            android:id="@+id/oompaloompa_profession"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/oompaloompa_last_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/oompaloompa_last_name"
            app:layout_constraintTop_toBottomOf="@+id/oompaloompa_last_name"
            tools:text="Excellent!!!"
            app:oompaLoompaProfession="@{oompaloompa}"/>

        <TextView
            android:id="@+id/oompaloompa_gender"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/oompaloompa_profession"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/oompaloompa_profession"
            app:layout_constraintTop_toBottomOf="@+id/oompaloompa_profession"
            tools:text="Excellent!!!"
            app:oompaLoompaGender="@{oompaloompa}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>